<table>
  <tr>
    <th>Name</th>
    <th>Books</th>
    <th>Actions</th>
  </tr>
  <% @authors.each do |author| %>
    <tr>
      <td><%= author.name %></td>
      <td><%= author.books.length %></td>
      <td>
        <%= link_to 'Edit', edit_author_path( author ) %>
        <%= link_to 'Destroy', author_path( author ), :method => :delete, :confirm => 'Are you sure?' %>
      </td>
    </tr>
  <% end %>
</table>

<%= link_to 'New', new_author_path %>
